<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="DialougeToHtmlTable.DialougueWindow"
        mc:Ignorable="d"
        Title="DialougueWindow" Height="600" Width="800" MinHeight="300" MinWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>

        <ScrollViewer>
            <Grid x:Name="TextInputGrid">
            </Grid>
        </ScrollViewer>
        
        <Grid Grid.Row="1" Background="LightCyan" Margin="0,15,0,0">
            <Button Grid.Row="1"
                Width="60"
                Height="40"
                Content="Run"
                    HorizontalAlignment="Right"
                    Margin="0,0,25,0"
                Click="Button_Click" FontSize="16"></Button>
        </Grid>
    </Grid>
</Window>