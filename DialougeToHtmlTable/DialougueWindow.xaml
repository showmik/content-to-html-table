<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="DialougeToHtmlTable.DialougueWindow"
        mc:Ignorable="d"
        Title="DialougueWindow" Height="600" Width="800" MinHeight="300" MinWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>

        <ScrollViewer>
            <Grid x:Name="TextInputGrid">
            </Grid>
        </ScrollViewer>

        <Button Grid.Row="1" Width="50" Height="30" Content="Run" Click="Button_Click"></Button>
    </Grid>
</Window>